<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.heisenberg"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.heisenberg.HeisenbergMain"
            android:screenOrientation = "portrait"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:name="com.example.heisenberg.LoginActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity 
            android:name="com.example.heisenberg.RegisterActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity 
            android:name="com.example.heisenberg.BrowseActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity 
            android:name="com.example.heisenberg.DetailsActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity 
            android:name="com.example.heisenberg.NewItemActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity 
            android:name="com.example.heisenberg.EditItemActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity 
            android:name="com.example.heisenberg.SearchActivity"
            android:screenOrientation = "portrait"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>
    
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"></uses-permission>    
	<uses-permission android:name="android.permission.DOWNLOAD_WITHOUT_NOTIFICATION" />
</manifest>
